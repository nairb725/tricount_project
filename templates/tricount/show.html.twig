{% extends 'base.html.twig' %}

{% block title %}Tricount{% endblock %}

{% block body %}
 <h1 class="text-center mt-3 mb-3">Tricount</h1>
<body class="container"> 
<div class="row">
<div class="col-3"></div>
<div class="col-6">
   

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tricount.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ tricount.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ tricount.description }}</td>
            </tr>
            <tr>
                <th>Currency</th>
                <td>{{ tricount.currency }}</td>
            </tr>
            <tr>
                <th>Expense</th>
                {% for expense in expenses %}
                    <td>{{ expense.id }}</td>
                {% else %}
                    <tr>
                        <td colspan="4">no records found</td>
                    </tr>
                {% endfor %}
            </tr>
        </tbody>
    </table>

    
 {{ include('tricount/showbutton.html.twig') }}
    </div>  
<div class="col-3"></div>  
</body>
{% endblock %}
