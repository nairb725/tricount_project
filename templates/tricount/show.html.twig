{% extends 'base.html.twig' %}

{% block title %}Tricount{% endblock %}

{% block body %}
 <h1 class="text-center mt-3 mb-3">Tricount</h1>
<body class="container"> 
<div class="row">
<div class="col-3"></div>
<div class="col-6">
    <style>
        ul {
            list-style: none;
        }
        tbody {
            text-align: center;
        }

    </style>
   

    <table class="table">
        <tbody >
            <tr>
                <th>Title</th>
                <td>{{ tricount.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ tricount.description }}</td>
            </tr>
            <tr>
                <th>Currency</th>
                <td>{{ tricount.currency }}</td>
            </tr>

            <tr>
                <th>Qui a pay√©, combien et pourquoi ?</th>
                <th>Quand ?</th>
                <th>Concerne qui ?</th>
                <th>Pour vous ?</th>
            </tr>
            {% for name in names %}
                <tr>
                    <td>{{ name.creator }} {{ name.price }} {{ tricount.currency}} {{ name.name }} </td>
                    <td>{{ name.date|date('Y-m-d H:i:s') }}</td>
                    <td>
                    <ul class="pl-0">
                    {% for j in name.user %}
                        <li> {{ j }} </li>
                    {% endfor %}
                    </ul>
                    </td>
                    <td>{{ name.balance }} {{ tricount.currency}}</td>

                    {% else %}
                    <tr>
                        <td colspan="4">no records found</td>
                    </tr>

            {% endfor %}
        </tbody>
    </table>

    
 {{ include('tricount/showbutton.html.twig') }}
    </div>  
<div class="col-3"></div>
</div>
</body>
{% endblock %}
