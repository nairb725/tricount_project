    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tricount in tricounts %}
            <tr>
                <td>{{ tricount.id }}</td>
                <td>{{ tricount.title }}</td>
                <td>{{ tricount.description }}</td>
                <td>
